// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AgentName {
  JIM
  ALEX
  MIKE
  TONY
  LARA
  LEIZ
  VALENTINA
  DANIELE
  SIMONE
  WONDER
  NIKO
  LEO
  LAURA
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  oauthId        String       @unique
  username       String?
  // Multiple selected agents (empty by default)
  selectedAgents AgentName[]  @default([])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}
